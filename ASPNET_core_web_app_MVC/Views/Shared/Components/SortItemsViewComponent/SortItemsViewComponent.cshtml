

<div style="display:inline-flex; margin-bottom:20px">
    <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups">

        @*
            Use normal form instead of BeginForm, to pass value into route value by method Get
        *@
        <form asp-controller="Home" asp-action="SearchItems" method="get">
            <div class="input-group mr-5">
                <input type="text"
                       class="form-control"
                       placeholder="Search..."
                       aria-label="Search"
                       aria-describedby="btnGroupAddon"
                       name="name"
                       style="width:350px">
                <button type="submit" class="btn btn-outline-secondary">Search</button>
            </div>
        </form>

        @*
        *****************************************************************************************************************************
        *******************                              Sort                                                     *******************
        *****************************************************************************************************************************
        *@
        <div class="btn-group me-2 ml-5" role="group" aria-label="First group">
            <div class="dropdown mx-1">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Sort
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    @using (Html.BeginForm("SortItems", "Home", new
                    {
                        type = ViewBag.SessionType,
                        localisation = ViewBag.SessionLocalisation,
                        sort = "Name",
                        direction = "ASC"
                    }, FormMethod.Post))
                    {
                        <button type="submit" class="dropdown-item btn btn-outline-secondary">Name (A to Z)</button>
                    }
                    @using (Html.BeginForm("SortItems", "Home", new
                    {
                        type = ViewBag.SessionType,
                        localisation = ViewBag.SessionLocalisation,
                        sort = "Name",
                        direction = "DSC"
                    }, FormMethod.Post))
                    {
                        <button type="submit" class="dropdown-item btn btn-outline-secondary">Name (Z to A)</button>
                    }
                    @using (Html.BeginForm("SortItems", "Home", new
                    {
                        type = ViewBag.SessionType,
                        localisation = ViewBag.SessionLocalisation,
                        sort = "Date",
                        direction = "DSC"
                    }, FormMethod.Post))
                    {
                        <button type="submit" class="dropdown-item btn btn-outline-secondary">Lastest</button>
                    }
                    @using (Html.BeginForm("SortItems", "Home", new
                    {
                        type = ViewBag.SessionType,
                        localisation = ViewBag.SessionLocalisation,
                        sort = "Date",
                        direction = "ASC"
                    }, FormMethod.Post))
                    {
                        <button type="submit" class="dropdown-item btn btn-outline-secondary">Older</button>
                    }
                </div>
            </div>

            @*
            *****************************************************************************************************************************
            *******************                              Filter : Type                                            *******************
            *****************************************************************************************************************************
            *@

            <div class="dropdown mx-1">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Type
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="max-height: 200px; overflow-y: auto;">
                    @foreach (var type in ViewBag.Types)
                    {
                        @using (Html.BeginForm("SortItems", "Home", new
                        {
                            type = @type,
                            localisation = ViewBag.SessionLocalisation,
                            sort = ViewBag.SessionSort,
                            direction = ViewBag.SessionDirection
                        }, FormMethod.Post))
                        {
                            <button type="submit" class="dropdown-item btn btn-outline-secondary">@type</button>
                        }
                    }
                </div>
            </div>

            @*
            *****************************************************************************************************************************
            *******************                              Filter : Localistion                                     *******************
            *****************************************************************************************************************************
            *@

            <div class="dropdown mx-1">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Localisation
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="max-height: 200px; overflow-y: auto;">
                    @foreach (var commune in ViewBag.Communes)
                    {
                        @using (Html.BeginForm("SortItems", "Home", new
                        {
                            type = ViewBag.SessionType,
                            localisation = @commune,
                            sort = ViewBag.SessionSort,
                            direction = ViewBag.SessionDirection
                        }, FormMethod.Post))
                        {
                            <button type="submit" class="dropdown-item btn btn-outline-secondary">@commune</button>
                        }
                    }
                </div>
            </div>


        </div>
    </div>
</div>