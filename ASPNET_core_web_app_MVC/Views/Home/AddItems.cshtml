@model ASPNET_core_web_app_MVC.Models.ItemCredential

@{
    @*Layout = null;*@
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Item</title>
</head>
<body>
    @using (Html.BeginForm("AddItems", "Home", FormMethod.Post))    // Send to "ActionLogIn" of "HomeController" in method Post
    {
        <table cellpadding="0" cellspacing="0" class="table table-striped mx-auto">
            <tr>
                <th colspan="2" align="center">Add item</th>
            </tr>
            <tr>
                <td>Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.Name, new { maxlength = "50", required = "required" })
                </td>
            </tr>
            <tr>
                <td>Type: </td>
                <td>
                    @Html.DropDownListFor(m => m.Type, new SelectList(ViewBag.Types), "Type", new { required = "required" })
                </td>
            </tr>
            <tr>
                <td>Localisation: </td>
                <td>
                    @Html.DropDownListFor(m => m.Localisation, new SelectList(ViewBag.Communes), "Localisation", new { required = "required" })
                </td>
            </tr>
            <tr>
                <td>Description: </td>
                <td>
                    @Html.TextAreaFor(m => m.Description, new { maxlength = "100", rows = "3", cols = "40", required = "required" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <button type="submit" class="btn btn-success mx-auto">Add Item</button>
                </td>
            </tr>
        </table>
    }
</body>
</html>