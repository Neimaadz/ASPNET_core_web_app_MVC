
@{
    @*Layout = null;  // Nav banner from /Shared/_Layout.cshtml (delete this to add)*@
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details : @ViewBag.DetailsItems.Name</title>
</head>
<body>
    <div class="card mb-3 mx-auto">
        <img class="card-img-top img-fluid mx-auto my-4" src="~/images/@ViewBag.DetailsItems.Image" alt="Card image cap" style="width:500px;">
        <div class="card-body">
            <h5 class="card-title">@ViewBag.DetailsItems.Name</h5>
            <p class="card-text">@ViewBag.DetailsItems.Description</p>
            <p class="card-text"><small class="text-muted">Added @ViewBag.DetailsItems.Date</small></p>
        </div>
    </div>
</body>
</html>

