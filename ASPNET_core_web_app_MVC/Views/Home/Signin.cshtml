@model ASPNET_core_web_app_MVC.Models.User

@{
    @*Layout = null;*@
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signin</title>
</head>
<body>
    @using (Html.BeginForm("Signin", "Home", FormMethod.Post))    // Send to "ActionSignIn" of "HomeController" in method Post
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Signin</th>
            </tr>
            <tr>
                <td>Username: </td>
                <td>
                    @Html.TextBoxFor(m => m.Username, new { type = "text", required = "required" })
                </td>
            </tr>
            <tr>
                <td>Password: </td>
                <td>
                    @Html.PasswordFor(m => m.Password, new { type = "password", required = "required" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Sign in" /></td>
            </tr>
        </table>
    }
</body>
</html>